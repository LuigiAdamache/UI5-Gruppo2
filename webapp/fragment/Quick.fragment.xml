<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<QuickView id="quickView">
		<QuickViewPage
			header="{meteo>/city}"
			title="Tempo: {meteo>/description}"
			description="Temperatura minima: {meteo>/temp_min}">
		
            <QuickViewGroup>
                <QuickViewGroupElement
                    label="Send Email"
                    value="@"
                    type="email"
                    visible="{meteo>/email}"
                    />
            </QuickViewGroup>
        </QuickViewPage>
	</QuickView>
</core:FragmentDefinition>
