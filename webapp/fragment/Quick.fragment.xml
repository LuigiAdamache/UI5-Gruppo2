<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<QuickView id="quickView">
		<QuickViewPage
			header="{meteo>/city}"
			title="{meteo>/description}"
			description="{meteo>/temp_min}">
		
            <QuickViewGroup>
                <QuickViewGroupElement
                    label="email"
                    value="Send email"
                    type="email"
                    visible="{meteo>/email}"
                    />
            </QuickViewGroup>
        </QuickViewPage>
	</QuickView>
</core:FragmentDefinition>
